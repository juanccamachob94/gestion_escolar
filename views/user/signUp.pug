extends ../layout
block content
  form(action="/user/signUp" method="POST" enctype="multipart/form-data")
    //Username
    label(for="username") Username:
    input(id="username" name="username" type="text" required=true)
    //Given name
    label(for="name") Name:
    input(id="name" name="givenName" type="text" required=true)
    //Family name
    label(for="lastname") Lastname:
    input(id="lastname" name="familyName" type="text" required=true)
    //Email
    label(for="email") Email:
    input(id="email" name="email" type="email" required=true)
    //Password
    label(for="password") Password:
    input(id="password" name="password" type="password" required=true autocomplete="off")
    //Password confirmation
    label(for="password_confirmation") Password confirmation:
    input(id="password_confirmation" name="password_confirmation" type="password" required=true autocomplete="off")
    //Image/Photo
    label(for="photo") Photo:
    input(id="photo" name="photo" type="file" accept="image/*")
    //Button
    input(type="submit" value="Create account")
